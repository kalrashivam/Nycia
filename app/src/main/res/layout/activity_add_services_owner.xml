<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.designcut.nycia.Salon.AddServices_ownerActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Services that you want to provide with their cost"
        android:padding="12dp"
        android:textSize="22dp"
        android:gravity="center"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <EditText
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:hint="service name"
        android:id="@+id/add_service"/>

    <EditText
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:hint="service amount"
        android:id="@+id/add_amount"/>

</LinearLayout>
    
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add service"
        android:id="@+id/Add_servicebutton"/>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listview_services"/>
</LinearLayout>
